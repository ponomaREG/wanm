<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="550dp">
    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/fragment_desc_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="210dp"/>

    <TextView
        android:id="@+id/fragment_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:layout_below="@id/fragment_desc_image"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/fragment_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/fragment_desc_desc"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>